<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension
		point="org.eclipse.ui.views"
	>
		<category
			id="com.liferay.ide.upgrade.ui.liferayUpgrade"
			name="Liferay Upgrade"
		>
		</category>
		<view
			allowMultiple="false"
			category="com.liferay.ide.upgrade.ui.liferayUpgrade"
			class="com.liferay.ide.upgrade.ui.view.plan.UpgradePlanView"
			icon="icons/liferay_logo_16.png"
			id="com.liferay.ide.upgrade.ui.upgradePlanView"
			name="Liferay Upgrade Plan"
			restorable="true"
		>
		</view>
		<view
			allowMultiple="false"
			category="com.liferay.ide.upgrade.ui.liferayUpgrade"
			class="com.liferay.ide.upgrade.ui.view.info.UpgradeInfoView"
			icon="icons/liferay_logo_16.png"
			id="com.liferay.ide.upgrade.ui.upgradeInformationView"
			name="Liferay Upgrade Information"
			restorable="true"
		>
		</view>
	</extension>
	<extension
		point="org.eclipse.ui.perspectives"
	>
		<perspective
			class="com.liferay.ide.upgrade.ui.perspective.UpgradeToolPerspectiveFactory"
			icon="icons/liferay_logo_16.png"
			id="com.liferay.ide.eclipse.ui.perspective.upgradeToolPerspective"
			name="Liferay Upgrade"
		>
		</perspective>
	</extension>
	<extension
		point="org.eclipse.ui.navigator.navigatorContent"
	>
		<navigatorContent
			activeByDefault="true"
			appearsBefore="org.eclipse.jst.servlet.ui.EnhancedJavaRendering"
			contentProvider="com.liferay.ide.upgrade.ui.navigator.MigrationProblemsContentProvider"
			icon="icons/liferay_logo_16.png"
			id="com.liferay.ide.ui.navigator.content.migrationProblems"
			labelProvider="com.liferay.ide.upgrade.ui.navigator.MigrationProblemsLabelProvider"
			name="Liferay Migration Problems"
			priority="highest"
		>
			<triggerPoints>
				<or>
					<instanceof
						value="org.eclipse.core.resources.IProject"
					>
					</instanceof>
				</or>
			</triggerPoints>
			<possibleChildren>
				<or>
					<instanceof
						value="org.eclipse.core.resources.IProject"
					>
					</instanceof>
					<instanceof
						value="com.liferay.ide.project.core.upgrade.FileProblems"
					>
					</instanceof>
					<instanceof
						value="com.liferay.ide.project.core.upgrade.UpgradeProblems"
					>
					</instanceof>
					<instanceof
						value="com.liferay.ide.project.core.upgrade.MigrationProblemsContainer"
					>
					</instanceof>
					<instanceof
						value="com.liferay.ide.upgrade.ui.navigator.ProjectMigrationProblems"
					>
					</instanceof>
					<instanceof
						value="com.liferay.blade.api.Problem"
					>
					</instanceof>
				</or>
			</possibleChildren>
		</navigatorContent>
	</extension>
</plugin>