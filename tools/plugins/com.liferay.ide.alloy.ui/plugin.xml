<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="com.liferay.ide.newWizards"
            icon="icons/e16/laut.png"
            id="com.liferay.ide.alloy.ui.wizard.AlloyUIUpgradeWizard"
            name="%upgrade.project.wizard.name"
            project="true">
         <class class="com.liferay.ide.alloy.ui.wizard.AlloyUIUpgradeWizard">
         </class>

         <description>
            %new.project.wizard.description
         </description>
         <selection
               class="org.eclipse.core.resources.IResource">
         </selection>
      </wizard>
   </extension>

   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="com.liferay.ide.alloy.ui.handlers"
            description="AlloyUI Upgrade."
            id="com.liferay.ide.alloy.ui.handlers.alloyUIUpgrade"
            name="AlloyUI Upgrade">
      </command>
      <category
            description="AlloyUI Upgrade"
            id="com.liferay.ide.alloy.ui.handlers"
            name="AlloyUI Upgrade">
      </category>
   </extension>

   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:project?after=additions">
         <command
               commandId="com.liferay.ide.alloy.ui.handlers.alloyUIUpgrade"
               icon="icons/e16/laut.png"
               label="AlloyUI Upgrade"
               style="push"
               tooltip="Upgrade portal runtime to latest.">
         </command>
      </menuContribution>
   </extension>

   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.liferay.ide.alloy.ui.handlers.AlloyUIUpgradeHandler"
            commandId="com.liferay.ide.alloy.ui.handlers.alloyUIUpgrade">
      </handler>
   </extension>

   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="com.liferay.ide.ui.popupmenu"
            objectClass="org.eclipse.core.resources.IResource">
         <menu
               icon="icons/e16/liferay.png"
               id="liferayPopupMenuCategory"
               label="Liferay">
            <separator
                  name="slot1">
            </separator>
         </menu>
      </objectContribution>
      <objectContribution
            adaptable="true"
            id="com.liferay.ide.alloy.ui.popup1"
            objectClass="org.eclipse.core.resources.IResource">
         <action
               class="com.liferay.ide.alloy.ui.action.UpgradeToolAction"
               enablesFor="*"
               icon="icons/e16/laut.png"
               id="com.liferay.ide.alloy.ui.popup.laut"
               label="Run Liferay AUI Upgrade Tool"
               menubarPath="liferayPopupMenuCategory/slot1">
         </action>
      </objectContribution>
   </extension>

</plugin>
