<project>
    <shortName>liferayworkspace</shortName>
    <fullName>Liferay Workspace</fullName>
    <version>1.0</version>
    <logoImage>../shared/images/liferay_logo_large.png</logoImage>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../shared/libs/biz.aQute.jpm.run.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../shared/libs/blade.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../shared/libs/build.gradle</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux</name>
                    <platforms>linux</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfilesosx</name>
                    <platforms>osx</platforms>
                </folder>
            </folderList>
        </component>
    </componentList>
    <postInstallationActionList>
        <if>
            <explanation>is windows</explanation>
            <actionList>
                <setInstallerVariable>
                    <name>${installdir}</name>
                    <value>${system_temp_directory}\${product_shortname}</value>
                </setInstallerVariable>
            </actionList>
            <conditionRuleList>
                <compareText>
                    <logic>contains</logic>
                    <nocase>1</nocase>
                    <text>${platform_name}</text>
                    <value>win</value>
                </compareText>
            </conditionRuleList>
        </if>
        <if>
            <explanation>is install for all users</explanation>
            <actionList>
                <if>
                    <explanation>is windows</explanation>
                    <actionList>
                        <setInstallerVariable name="installJpmCommand" value="-jar ${installdir}\biz.aQute.jpm.run.jar init"/>
                    </actionList>
                    <conditionRuleList>
                        <compareText>
                            <logic>contains</logic>
                            <nocase>1</nocase>
                            <text>${platform_name}</text>
                            <value>win</value>
                        </compareText>
                    </conditionRuleList>
                    <elseActionList>
                        <setInstallerVariable name="installJpmCommand" value="-jar ${installdir}/biz.aQute.jpm.run.jar init"/>
                    </elseActionList>
                </if>
            </actionList>
            <conditionRuleList>
                <isTrue>
                    <value>${installforallusers}</value>
                </isTrue>
            </conditionRuleList>
            <elseActionList>
                <if>
                    <explanation>is windows</explanation>
                    <actionList>
                        <setInstallerVariable name="installJpmCommand" value="-jar ${installdir}\biz.aQute.jpm.run.jar -u init"/>
                    </actionList>
                    <conditionRuleList>
                        <compareText>
                            <logic>contains</logic>
                            <nocase>1</nocase>
                            <text>${platform_name}</text>
                            <value>win</value>
                        </compareText>
                    </conditionRuleList>
                    <elseActionList>
                        <setInstallerVariable name="installJpmCommand" value="-jar ${installdir}/biz.aQute.jpm.run.jar -u init"/>
                    </elseActionList>
                </if>
            </elseActionList>
        </if>
        <runProgram>
            <program>java</program>
            <programArguments>${installJpmCommand}</programArguments>
        </runProgram>
        <if>
            <explanation>need to add sysstem path</explanation>
            <actionList>
                <if>
                    <explanation>is linux</explanation>
                    <actionList>
                        <setInstallerVariable name="jpmSystemPath" value="$HOME/jpm/bin"/>
                    </actionList>
                    <conditionRuleList>
                        <compareText>
                            <logic>contains</logic>
                            <nocase>1</nocase>
                            <text>${platform_name}</text>
                            <value>linux</value>
                        </compareText>
                    </conditionRuleList>
                    <elseActionList>
                        <if>
                            <explanation>is mac</explanation>
                            <actionList>
                                <setInstallerVariable name="jpmSystemPath" value="$HOME/Library/PackageManager/bin"/>
                            </actionList>
                            <conditionRuleList>
                                <compareText>
                                    <logic>contains</logic>
                                    <nocase>1</nocase>
                                    <text>${platform_name}</text>
                                    <value>osx</value>
                                </compareText>
                            </conditionRuleList>
                            <elseActionList>
                                <setInstallerVariable>
                                    <name>jpmSystemPath</name>
                                    <value>${user_home_directory}\.jpm\windows\bin</value>
                                </setInstallerVariable>
                            </elseActionList>
                        </if>
                    </elseActionList>
                </if>
                <addDirectoryToPath>
                    <insertAt>end</insertAt>
                    <path>${jpmSystemPath}</path>
                </addDirectoryToPath>
            </actionList>
            <conditionRuleList>
                <isFalse>
                    <value>${installforallusers}</value>
                </isFalse>
            </conditionRuleList>
            <elseActionList>
                <if>
                    <explanation>is linux</explanation>
                    <actionList>
                        <setInstallerVariable name="jpmSystemPath" value="/usr/local/bin"/>
                    </actionList>
                    <conditionRuleList>
                        <compareText>
                            <logic>contains</logic>
                            <nocase>1</nocase>
                            <text>${platform_name}</text>
                            <value>linux</value>
                        </compareText>
                    </conditionRuleList>
                    <elseActionList>
                        <if>
                            <explanation>is mac</explanation>
                            <actionList>
                                <setInstallerVariable name="jpmSystemPath" value="/usr/local/bin"/>
                            </actionList>
                            <conditionRuleList>
                                <compareText>
                                    <logic>contains</logic>
                                    <nocase>1</nocase>
                                    <text>${platform_name}</text>
                                    <value>osx</value>
                                </compareText>
                            </conditionRuleList>
                            <elseActionList>
                                <setInstallerVariable>
                                    <name>jpmSystemPath</name>
                                    <value>C:\jpm4j\bin</value>
                                </setInstallerVariable>
                                <addDirectoryToPath>
                                    <insertAt>end</insertAt>
                                    <path>${jpmSystemPath}</path>
                                </addDirectoryToPath>
                            </elseActionList>
                        </if>
                    </elseActionList>
                </if>
            </elseActionList>
        </if>
        <if>
            <explanation>is linux</explanation>
            <actionList>
                <if>
                    <explanation>is linux</explanation>
                    <actionList>
                        <setInstallerVariable name="jpmFilePath" value="${jpmSystemPath}\jpm"/>
                        <setInstallerVariable>
                            <name>bladeFilePath</name>
                            <value>${installdir}\blade.jar</value>
                        </setInstallerVariable>
                    </actionList>
                    <conditionRuleList>
                        <compareText>
                            <logic>contains</logic>
                            <nocase>1</nocase>
                            <text>${platform_name}</text>
                            <value>win</value>
                        </compareText>
                    </conditionRuleList>
                    <elseActionList>
                        <setInstallerVariable>
                            <name>jpmFilePath</name>
                            <value>${jpmSystemPath}/jpm</value>
                        </setInstallerVariable>
                        <setInstallerVariable>
                            <name>bladeFilePath</name>
                            <value>${installdir}/blade.jar</value>
                        </setInstallerVariable>
                    </elseActionList>
                </if>
            </actionList>
            <conditionRuleList>
                <isTrue>
                    <value>${installforallusers}</value>
                </isTrue>
            </conditionRuleList>
            <elseActionList>
                <if>
                    <explanation>is linux</explanation>
                    <actionList>
                        <setInstallerVariable name="jpmFilePath" value="${jpmSystemPath}\jpm"/>
                        <setInstallerVariable>
                            <name>bladeFilePath</name>
                            <value>${installdir}\blade.jar</value>
                        </setInstallerVariable>
                    </actionList>
                    <conditionRuleList>
                        <compareText>
                            <logic>contains</logic>
                            <nocase>1</nocase>
                            <text>${platform_name}</text>
                            <value>win</value>
                        </compareText>
                    </conditionRuleList>
                    <elseActionList>
                        <setInstallerVariable>
                            <name>jpmFilePath</name>
                            <value>${jpmSystemPath}/jpm</value>
                        </setInstallerVariable>
                        <setInstallerVariable>
                            <name>bladeFilePath</name>
                            <value>${installdir}/blade.jar</value>
                        </setInstallerVariable>
                    </elseActionList>
                </if>
            </elseActionList>
        </if>
        <runProgram>
            <program>${jpmFilePath}</program>
            <programArguments>install -f ${bladeFilePath}</programArguments>
        </runProgram>
        <if>
            <explanation>need to install liferay workspace</explanation>
            <actionList>
                <if>
                    <explanation>is windows</explanation>
                    <actionList>
                        <setInstallerVariable>
                            <name>bladeCommondPath</name>
                            <value>${jpmSystemPath}\blade</value>
                        </setInstallerVariable>
                        <propertiesFileSet>
                            <file>${user_home_directory}\.gradle\gradle.properties</file>
                            <key>dxpCustomerUsername</key>
                            <value>${username}</value>
                            <ruleList>
                                <isTrue>
                                    <value>${initLiferayWorkspace}</value>
                                </isTrue>
                                <isTrue>
                                    <value>${isDXPCustomer}</value>
                                </isTrue>
                            </ruleList>
                        </propertiesFileSet>
                        <propertiesFileSet>
                            <file>${user_home_directory}\.gradle\gradle.properties</file>
                            <key>dxpCustomerPassword</key>
                            <value>${password}</value>
                            <ruleList>
                                <isTrue>
                                    <value>${initLiferayWorkspace}</value>
                                </isTrue>
                                <isTrue>
                                    <value>${isDXPCustomer}</value>
                                </isTrue>
                            </ruleList>
                        </propertiesFileSet>
                    </actionList>
                    <conditionRuleList>
                        <compareText>
                            <logic>contains</logic>
                            <nocase>1</nocase>
                            <text>${platform_name}</text>
                            <value>win</value>
                        </compareText>
                    </conditionRuleList>
                    <elseActionList>
                        <setInstallerVariable>
                            <name>bladeCommondPath</name>
                            <value>${jpmSystemPath}/blade</value>
                        </setInstallerVariable>
                        <propertiesFileSet>
                            <file>${user_home_directory}/.gradle/gradle.properties</file>
                            <key>dxpCustomerUsername</key>
                            <value>${username}</value>
                            <ruleList>
                                <isTrue>
                                    <value>${initLiferayWorkspace}</value>
                                </isTrue>
                                <isTrue>
                                    <value>${isDXPCustomer}</value>
                                </isTrue>
                            </ruleList>
                        </propertiesFileSet>
                        <propertiesFileSet>
                            <file>${user_home_directory}/.gradle/gradle.properties</file>
                            <key>dxpCustomerPassword</key>
                            <value>${password}</value>
                            <ruleList>
                                <isTrue>
                                    <value>${initLiferayWorkspace}</value>
                                </isTrue>
                                <isTrue>
                                    <value>${isDXPCustomer}</value>
                                </isTrue>
                            </ruleList>
                        </propertiesFileSet>
                    </elseActionList>
                </if>
                <runProgram>
                    <program>${bladeCommondPath}</program>
                    <programArguments>-b ${lrws} init</programArguments>
                </runProgram>
                <if>
                    <explanation>is windows</explanation>
                    <actionList>
                        <copyFile>
                            <destination>${lrws}\build.gradle</destination>
                            <origin>${installdir}\build.gradle</origin>
                        </copyFile>
                    </actionList>
                    <conditionRuleList>
                        <compareText>
                            <logic>contains</logic>
                            <nocase>1</nocase>
                            <text>${platform_name}</text>
                            <value>win</value>
                        </compareText>
                    </conditionRuleList>
                    <elseActionList>
                        <copyFile>
                            <destination>${lrws}/build.gradle</destination>
                            <origin>${installdir}/build.gradle</origin>
                        </copyFile>
                    </elseActionList>
                </if>
            </actionList>
            <conditionRuleList>
                <isTrue>
                    <value>${initLiferayWorkspace}</value>
                </isTrue>
            </conditionRuleList>
        </if>
        <if>
            <explanation>is windows</explanation>
        </if>
        <deleteFile>
            <path>${installdir}</path>
        </deleteFile>
        <runProgram>
            <program>chown</program>
            <programArguments>-R ${env(SUDO_USER)} ${lrws}</programArguments>
            <ruleList>
                <isTrue>
                    <value>${installer_is_root_install}</value>
                </isTrue>
                <compareText>
                    <logic>does_not_contain</logic>
                    <nocase>1</nocase>
                    <text>${platform_name}</text>
                    <value>win</value>
                </compareText>
            </ruleList>
        </runProgram>
    </postInstallationActionList>
    <createUninstaller>0</createUninstaller>
    <disableSplashScreen>1</disableSplashScreen>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <outputDirectory>../outputs</outputDirectory>
    <vendor>Liferay, Inc</vendor>
    <parameterList>
        <booleanParameter>
            <name>installforallusers</name>
            <title>Install for all users</title>
            <description>Install for all users?</description>
            <explanation></explanation>
            <value></value>
            <default></default>
            <ruleList>
                <isTrue>
                    <value>${installer_is_root_install}</value>
                </isTrue>
            </ruleList>
        </booleanParameter>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${system_temp_directory}/${product_shortname}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>0</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>1</mustBeWritable>
            <mustExist>0</mustExist>
            <width>30</width>
        </directoryParameter>
        <booleanParameterGroup>
            <name>initLiferayWorkspace</name>
            <title>Initilalize Liferay Workspace directory</title>
            <description>Initilalize Liferay Workspace directory</description>
            <explanation></explanation>
            <value></value>
            <default></default>
            <parameterList>
                <directoryParameter>
                    <name>lrws</name>
                    <title>Liferay Workspace</title>
                    <description>Directory:</description>
                    <explanation></explanation>
                    <value></value>
                    <default>${user_home_directory}</default>
                    <allowEmptyValue>0</allowEmptyValue>
                    <mustBeWritable>1</mustBeWritable>
                    <mustExist>0</mustExist>
                    <width>30</width>
                </directoryParameter>
            </parameterList>
        </booleanParameterGroup>
        <booleanParameterGroup>
            <name>isDXPCustomer</name>
            <title>DXP Customer</title>
            <description>DXP Customer</description>
            <explanation></explanation>
            <value></value>
            <default></default>
            <parameterList>
                <stringParameter>
                    <name>username</name>
                    <title>Username</title>
                    <description>Username:</description>
                    <explanation></explanation>
                    <value></value>
                    <default></default>
                    <allowEmptyValue>1</allowEmptyValue>
                    <width>30</width>
                </stringParameter>
                <stringParameter>
                    <name>password</name>
                    <title>Password</title>
                    <description>Password:</description>
                    <explanation></explanation>
                    <value></value>
                    <default></default>
                    <allowEmptyValue>1</allowEmptyValue>
                    <width>30</width>
                </stringParameter>
            </parameterList>
            <ruleList>
                <isTrue>
                    <value>${initLiferayWorkspace}</value>
                </isTrue>
            </ruleList>
        </booleanParameterGroup>
    </parameterList>
</project>

