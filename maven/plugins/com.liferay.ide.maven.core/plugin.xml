<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.m2e.core.lifecycleMappingMetadataSource">
   </extension>

   <extension
         point="org.eclipse.m2e.core.projectConfigurators">
      <configurator
            class="com.liferay.ide.maven.core.LiferayMavenProjectConfigurator"
            id="com.liferay.ide.maven.core.project.configurator"
            name="%liferay.maven.project.configurator"
            secondaryTo="org.maven.ide.eclipse.configuration.wtp.configurator">
      </configurator>
      <configurator
            class="com.liferay.ide.maven.core.LiferayProjectLifecycleConfigurator"
            id="com.liferay.ide.maven.core.lifecycle.configurator"
            name="%liferay.project.lifecycle.configurator">
      </configurator>
   </extension>
   <extension
         point="com.liferay.ide.core.liferayProjectProviders">
      <liferayProjectProvider
            class="com.liferay.ide.maven.core.LiferayMavenProjectProvider"
            id="com.liferay.ide.maven.core.mavenProjectProvider">
      </liferayProjectProvider>
   </extension>
   <extension
         id="com.liferay.ide.maven.core.configurationProblem"
         name="%liferay.project.maven.project.configuration.problem"
         point="org.eclipse.core.resources.markers">
      <persistent
            value="true">
      </persistent>
      <super
            type="org.eclipse.m2e.core.maven2Problem.wtp.configuration">
      </super>
   </extension>
   
   <extension
         point="org.eclipse.m2e.core.projectConversionParticipants">
      <conversionParticipantConfiguration
            compatiblePackagings="war"
            conversionParticipantId="com.liferay.ide.maven.core.liferayProjectConversionParticipant">
      </conversionParticipantConfiguration>    
      <projectConversionParticipant
            class="com.liferay.ide.maven.core.internal.converters.LiferayProjectConverter"
            id="com.liferay.ide.maven.core.liferayProjectConversionParticipant"
            name="%liferay.maven.project.converter.name"
            nature="org.eclipse.wst.common.modulecore.ModuleCoreNature">
      </projectConversionParticipant>
   </extension>
   <extension
         point="org.eclipse.m2e.core.conversionEnabler">
      <enabler
            class="com.liferay.ide.maven.core.internal.converters.LiferayPluginFacetConversionEnabler"
            id="com.liferay.ide.maven.core.PluginProjectConversionEnabler">
      </enabler>
   </extension>

</plugin>
